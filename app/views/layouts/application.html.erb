<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie9" lang="en"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= @title || 'My Blog' %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>

      <nav class="top-bar">
        <ul class="title-area">
          
          <!-- Title Area -->
          <li class="name">
            <h1><%= link_to 'Hello World! BLOG', root_path %></h1>
          </li>
          
          <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
          <li class="toggle-topbar menu-icon">
            <a href="#"><span>Menu</span></a>
          </li>
        
        </ul>

        <section class="top-bar-section">
          <!-- Left Nav Section -->
          <ul class="left">
            <li class="divider"></li>
            <li class="active"><%= link_to 'Posts', posts_path %></li>
            <li class="divider"></li>
            <% if current_user %>
            <li ><%= link_to 'Create new post!', new_post_path, class: 'button medium radius' %></li>
            <% end %>
            <li class="divider"></li>
            
          </ul>

          <!-- Right Nav Section -->
          <ul class="right">
            <li class="divider hide-for-small"></li>
       
            <li class="divider show-for-small"></li>
              
            <% if current_user %>
              <li class="divider"></li>
              <li>
                <%= link_to "Signed in as #{current_user.email}", user_path(current_user) %>
              </li>
              <li class="has-form">
                <%= link_to "Sign out", signout_path, method: :delete, class: "button radius" %>
               <!--  <a class="button" href="#">Log In!</a> -->
              </li>
            <% else %>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign up", new_user_path %>
              </li>
              <li class="has-form">
                <%= link_to "Sign in", signin_path, class: "button radius" %>
               <!--  <a class="button" href="#">Log In!</a> -->
              </li>
            <% end %>
          </ul>
        </section>
      </nav>

 
       <div class="row">

        <%= render 'layouts/messages' %>

       

          <%= yield %>


      </div>
    <%= javascript_include_tag "application" %>
  </body>
</html>

    
