<% @title = @post.title %>
<h2><%= @post.title %></h2>
<p><%= @post.content %></p>

<% if current_user == @post.user %>

<p><%= link_to 'Edit post', edit_post_path(@post) %> | 
  <%= link_to 'Delete Post', post_path(@post), 
                            method: :delete, 
                            data: {confirm: 'Are you sure?'} %></p>
<% end %>